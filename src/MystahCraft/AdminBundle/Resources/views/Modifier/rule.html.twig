{% extends 'MystahCraftAdminBundle::layout.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset("niceforms/niceforms-default.css") }}"> 
{% endblock %}

{% block title %}
	{{ parent() }} - Modifier règle n°{{ rule.id }}
{% endblock %}

{% block contenu %}
	<h1>Modifier règle n°{{ rule.id }}</h1>
	<form class="niceform" method="post"{{ form_enctype(form) }}>
		{{ form_errors(form) }}
		{{ form_rest(form) }}
		<div class="form-group">
			<div class="col-lg-offset-2 col-lg-10">
				<input type="submit" class="btn btn-default" />
			</div>
		</div>
	</form>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset("niceforms/niceforms.js") }}"></script>
{% endblock %}
